        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="120"
        x:Class="CheckinSystemAvalonia.InputDialog"
        Title="InputDialog">
