<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:CheckinSystemAvalonia.ViewModels.UserControls"
			 x:Class="CheckinSystemAvalonia.Views.UserControls.FakeNFCView"
             x:DataType="vm:FakeNFCViewModel">
			 <!--xmlns:vm holds the refrense to where
				 the VeiwModel is x:Datatype holds 
				 the actual name of the ViewModel to use-->
	
	<Grid ShowGridLines="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		
		<ItemsControl Grid.Column="0" Background="LightGray">

			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			
			<ItemsControl.ItemTemplate>
				<DataTemplate>

					<StackPanel Orientation="Horizontal">
						
						<!--FirstName-->
						<TextBlock/>
						<!--MiddleName-->
						<TextBlock/>
						<!--LastName-->
						<TextBlock/>
						
					</StackPanel>
					
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<StackPanel Grid.Column="1" 
					HorizontalAlignment="Center"
					VerticalAlignment="Center">

			<Button Content="Get Database" 
					Margin="0 0 0 20"/>
			
			<TextBox Width="220" 
					 MinHeight="40"
					 Watermark="CardID Must be 11 charectors"/>
			
			<Button Content="Scan Card"
					Margin="0 20 0 0"/>
			
		</StackPanel>
	</Grid>
</UserControl>
