<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:color="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CheckInSystemAvalonia.Views.UserControls.SettingsView"
			 xmlns:vm="clr-namespace:CheckInSystemAvalonia.ViewModels.UserControls"
			 xmlns:conv="clr-namespace:CheckInSystemAvalonia.Converters"
			 x:DataType="vm:SettingsViewModel">
	
	<UserControl.Resources>
		<conv:DrawingColorToAvaloniaColorConverter x:Key="DrawingToAvaloniaColorConverter"/>
	</UserControl.Resources>

	<Grid ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="45" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="45" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<WrapPanel Background="Blue"
				   Grid.Row="0" Grid.ColumnSpan="2">
			
			<Button Content="Back"
					Margin="6"
					Background="Gray"/>
			
		</WrapPanel>
		
		<Button Content="LogOut" 
				Background="Gray"
				HorizontalAlignment="Right"
				Margin="0 -1 10 0" 
				Grid.ColumnSpan="2"/>

		<WrapPanel Grid.Row="1">
			<StackPanel>
				
				<TextBlock Margin="10"
						   FontSize="20">
					
					Screen Settings
				</TextBlock>

				<TextBlock Margin="10 0 0 0">
					Primary screen for Employee Overview
				</TextBlock>

				<TextBox Margin="10 10 0 0" 
						 MinWidth="100"
						 HorizontalAlignment="Left"/>
				
			</StackPanel>
			
		</WrapPanel>

		<WrapPanel Grid.Column="2"
				   Grid.Row="1"
				   HorizontalAlignment="Right">
			
			<ScrollViewer>
				<ItemsControl ItemsSource="{Binding AbsenceReasons}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
							
								<StackPanel Orientation="Vertical" Spacing="5">
									<TextBox Width="100" Height="25" Text="{Binding Reason}"/>
									<Button Width="30" Height="30" 
											Background="Transparent">
										<TextBlock Text="X" Foreground="Red" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
									</Button>
									<color:ColorPicker Width="150" Height="30"
													   Color="{Binding HexColor, Converter={StaticResource DrawingToAvaloniaColorConverter}, Mode=TwoWay}"/>
								</StackPanel>
							
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
			
		</WrapPanel>


		<WrapPanel Background="Blue"
				   Grid.Row="2" Grid.ColumnSpan="2">
			
			<Button Content="Gem"
					Margin="6"
					Background="Gray"/>
			
		</WrapPanel>

	</Grid>
</UserControl>
