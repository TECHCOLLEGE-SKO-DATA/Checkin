<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CheckinSystemAvalonia.Window1"
        Title="Window1">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>

		<LayoutTransformControl>
			<LayoutTransformControl.LayoutTransform>
				<ScaleTransform ScaleX="1" ScaleY="1"/>
				<!-- Removed binding -->
			</LayoutTransformControl.LayoutTransform>

			<!-- ItemsControl for Groups -->
			<ItemsControl Grid.Row="0"
						  Background="#363737">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel IsVisible="True">
							<!-- Removed binding -->
							<!-- Group Name -->
							<TextBlock Text="Group Name" FontSize="100" Margin="20 0 0 5"/>
							<!-- Members -->
							<Border BorderBrush="Black" BorderThickness="2" Margin="10">
								<ItemsControl>
									<ItemsControl.ItemsPanel>
										<ItemsPanelTemplate>
											<WrapPanel Orientation="Horizontal"/>
										</ItemsPanelTemplate>
									</ItemsControl.ItemsPanel>
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<StackPanel Background="#d55e00" Margin="5">
												<StackPanel Orientation="Horizontal" Margin="10">
													<TextBlock Text="First Name" FontSize="70" Margin="0 0 20 0"/>
													<TextBlock Text="M" FontSize="70" Margin="0 0 20 0"/>
													<TextBlock Text="Last Name" FontSize="70" Margin="0 0 0 0"/>
												</StackPanel>
											</StackPanel>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</Border>
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</LayoutTransformControl>

		<!-- App Version -->
		<TextBlock Text="Version: 1.0.0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="14" Foreground="Gray"/>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<TextBlock Text="⌕" FontSize="30"/>
			<Button Content="-" Width="35" Height="30" FontSize="40" Padding="6 -12 0 0" Margin="3"/>
			<Button Content="+" Width="35" Height="30" FontSize="40" Padding="4 -13 0 0" Margin="3"/>
			<Button Content="⛶" Width="35" Height="30" FontSize="40" Padding="0 -10 0 0" Margin="3,0,20,0"/>
		</StackPanel>
	</Grid>
</Window>